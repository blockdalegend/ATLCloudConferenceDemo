{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ContainerGroupsName": {
      "type": "String"
    },
    "DockerImageName": {
      "type": "String"
    },
    "KVName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "DNSLabel": {
      "type": "string"
    },
    "ManagedIdentityName": {
      "type": "string"
    }
  },
  "variables": {
      "ManagedIdentityResourceId": "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('ManagedIdentityName'))]"
    },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2022-10-01-preview",
      "name": "[parameters('ContainerGroupsName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
          "[variables('ManagedIdentityResourceId')]": {}
        }
      },
      "properties": {
        "sku": "Standard",
        "containers": [
          {
            "name": "[parameters('ContainerGroupsName')]",
            "properties": {
              "image": "[parameters('DockerImageName')]",
              "ports": [
                {
                  "protocol": "TCP",
                  "port": 80
                },
                {
                  "protocol": "TCP",
                  "port": 443
                }
              ],
              "environmentVariables": [
                {
                  "name": "KEY_VAULT_NAME",
                  "value": "[parameters('KVName')]"
                }
              ],
              "resources": {
                "requests": {
                  "memoryInGB": 1.5,
                  "cpu": 1
                }
              }
            }
          }
        ],
        "initContainers": [],
        "restartPolicy": "OnFailure",
        "ipAddress": {
          "ports": [
            {
              "protocol": "TCP",
              "port": 80
            },
            {
              "protocol": "TCP",
              "port": 443
            }
          ],
          "type": "Public",
          "dnsNameLabel": "[parameters('DNSLabel')]",
          "autoGeneratedDomainNameLabelScope": "SubscriptionReuse"
        },
        "osType": "Linux"
      }
    }
  ]
}