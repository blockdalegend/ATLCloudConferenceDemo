{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "ContainerGroupsName": {
            "type": "String"
        },
        "DockerImageName": {
            "type":"String"
        },
        "DNSLabel": {
            "type":"String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2022-10-01-preview",
            "name": "[parameters('ContainerGroupsName')]",
            "location": "eastus",
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('ContainerGroupsName')]",
                        "properties": {
                            "image": "[parameters('DockerImageName')]",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                },
                                {
                                    "protocol": "TCP",
                                    "port": 443
                                }
                            ],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            }
                        }
                    }
                ],
                "initContainers": [],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        },
                        {
                            "protocol": "TCP",
                            "port": 443
                        }
                    ],
                    "ip": "52.226.58.168",
                    "type": "Public",
                    "dnsNameLabel": "[parameters('DNSLabel')]",
                    "autoGeneratedDomainNameLabelScope": "TenantReuse"
                },
                "osType": "Linux"
            }
        }
    ]
}