{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "server_name": {
        "type": "String"
      },
      "location": {
        "type": "string"
      },
      "adminpassword": {
        "type": "securestring"
      },
      "KeyVaultName": {
        "type": "string"
      },
      "db_name": {
        "type": "string"
      }
    },
    "resources": [
      {
        "type": "Microsoft.Sql/servers",
        "apiVersion": "2022-05-01-preview",
        "name": "[parameters('server_name')]",
        "location": "[parameters('location')]",
        "kind": "v12.0",
        "properties": {
          "administratorLogin": "[concat(parameters('server_name'), 'admin')]",
          "administratorLoginPassword": "[parameters('adminpassword')]",
          "version": "12.0",
          "minimalTlsVersion": "1.2",
          "publicNetworkAccess": "Enabled",
          "restrictOutboundNetworkAccess": "Disabled"
        }
      },
        {
            "type": "Microsoft.Sql/servers/connectionPolicies",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('server_name'), '/default')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('server_name'))]"
            ],
            "properties": {
                "connectionType": "Default"
            }
        },
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "2022-05-01-preview",
            "name": "[concat(parameters('server_name'), '/', parameters('db_name'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('server_name'))]"
            ],
            "sku": {
                "name": "GP_S_Gen5",
                "tier": "GeneralPurpose",
                "family": "Gen5",
                "capacity": 4
            },
            "kind": "v12.0,user,vcore,serverless",
            "properties": {
                "collation": "SQL_Latin1_General_CP1_CI_AS",
                "maxSizeBytes": 34359738368,
                "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
                "zoneRedundant": false,
                "readScale": "Disabled",
                "autoPauseDelay": 60,
                "requestedBackupStorageRedundancy": "Local",
                "minCapacity": 1,
                "maintenanceConfigurationId": "/subscriptions/463f0dcf-6d32-417d-9ce1-adf76e1c6dd9/providers/Microsoft.Maintenance/publicMaintenanceConfigurations/SQL_Default",
                "isLedgerOn": false,
                "preferredEnclaveType": "Default"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2022-11-01",
            "name": "[concat(parameters('KeyVaultName'), '/SQLDBAdmin')]",
            "location": "[parameters('location')]",
            "properties": {
                "attributes": {
                    "enabled": true
                },
                "contentType": "string",
                "value": "[reference(parameters('server_name'), '2022-05-01-preview', 'Full').properties.administratorLogin]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('server_name'))]",
                "[resourceId('Microsoft.Sql/servers/databases', parameters('server_name'), parameters('db_name'))]"
            ]
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2022-11-01",
            "name": "[concat(parameters('KeyVaultName'), '/SQLDBConnString')]",
            "location": "[parameters('location')]",
            "properties": {
                "attributes": {
                    "enabled": true
                },
                "contentType": "string",
                "value": "[concat('Server=tcp:',reference(parameters('server_name'), '2022-05-01-preview', 'Full').properties.fullyQualifiedDomainName,',1433;Initial Catalog=',parameters('db_name'),';Persist Security Info=False;User ID=',reference(parameters('server_name'), '2022-05-01-preview', 'Full').properties.administratorLogin,';Password=',parameters('adminpassword'),';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('server_name'))]",
                "[resourceId('Microsoft.Sql/servers/databases', parameters('server_name'), parameters('db_name'))]"
            ]
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "apiVersion": "2022-11-01",
            "name": "[concat(parameters('KeyVaultName'), '/SQLDBPassword')]",
            "location": "[parameters('location')]",
            "properties": {
                "attributes": {
                    "enabled": true
                },
                "contentType": "string",
                "value": "[parameters('adminpassword')]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', parameters('server_name'))]",
                "[resourceId('Microsoft.Sql/servers/databases', parameters('server_name'), parameters('db_name'))]"
            ]
        }
    ]
}